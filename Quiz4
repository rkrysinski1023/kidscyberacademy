<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Widget</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .quiz-container {
            max-width: 600px;
            margin: auto;
        }

        .question {
            margin-bottom: 20px;
        }

        .options {
            list-style-type: none;
            padding: 0;
        }

        .option {
            margin-bottom: 10px;
        }

        button {
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        canvas {
            margin-top: 20px;
            max-width: 300px;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        import wixData from 'wix-data';

        async function submitQuiz() {
            const questions = document.querySelectorAll('.question');
            let correctAnswers = 0;
            let incorrectAnswers = 0;

            for (const question of questions) {
                const selectedOption = question.querySelector('input:checked');
                if (selectedOption) {
                    const questionId = selectedOption.name.slice(1); 
                    const correctAnswer = await getCorrectAnswer(questionId);

                    if (selectedOption.value.toLowerCase() === correctAnswer.toLowerCase()) {
                        correctAnswers++;
                    } else {
                        incorrectAnswers++;
                    }
                }
            }

            recordQuizResults(correctAnswers, incorrectAnswers);

            alert(`Correct Answers: ${correctAnswers}\nIncorrect Answers: ${incorrectAnswers}`);
            displayChart(correctAnswers, incorrectAnswers);
        }

        async function recordQuizResults(correctAnswers, incorrectAnswers) {
            try {
                await wixData.insert("QuizResults", { correctAnswers, incorrectAnswers });
                console.log("Quiz results recorded successfully.");
            } catch (error) {
                console.error("Error recording quiz results:", error);
            }
        }

        async function getCorrectAnswer(questionId) {
            try {
                const result = { items: [{ correctAnswer: 'a' }] };
                const correctAnswer = result.items[0].correctAnswer;
                return correctAnswer;
            } catch (error) {
                console.error("Error fetching correct answer:", error);
                return null;
            }
        }

        function displayChart(correctAnswers, incorrectAnswers) {
            const ctx = document.getElementById('quizChart').getContext('2d');

            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Correct Answers', 'Incorrect Answers'],
                    datasets: [{
                        data: [correctAnswers, incorrectAnswers],
                        backgroundColor: ['#4CAF50', '#FF5733']
                    }]
                }
            });
        }
    </script>
</head>

<body>

    <div class="quiz-container">
        <div class="question" id="questionone">
            <h2>Question 1: What does IOT stand for?</h2>
            <ul class="options">
